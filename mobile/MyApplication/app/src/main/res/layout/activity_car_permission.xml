<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:text="This person tries to drive"/>

    <TextView
        android:id="@+id/text_question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below='@id/text_question'
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="your car"/>

    <ImageView
        android:id="@+id/driver_picture"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:src="@drawable/img_person"
        android:layout_centerInParent="true"/>


    <TextView
        android:id="@+id/text_allow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below='@id/driver_picture'
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:text="Allow it?"/>

    <Button
        android:id="@+id/btn_allow"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:textSize="24sp"
        android:layout_margin="30dp"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_rounded"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>


    <Button
        android:id="@+id/btn_restrict"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="No"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:layout_margin="30dp"
        android:background="@drawable/btn_rounded_gray"
        android:layout_alignParentLeft="true"/>

</RelativeLayout>